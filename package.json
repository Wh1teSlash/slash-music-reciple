{
  "name": "reciple-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "rimraf ./modules && tsc",
    "start": "reciple start -c reciple.mjs",
    "build:start": "bun run build && reciple start -c reciple.mjs",
    "dev": "bun --watch reciple.mjs",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format --write ./src",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@reciple/core": "^9.8.0",
    "discord.js": "^14.17.2",
    "drizzle-orm": "^0.39.3",
    "pg": "^8.13.1",
    "reciple": "^9.8.0",
    "reciple-anticrash": "4.0.0",
    "reciple-dev-commands": "4.0.0",
    "reciple-interaction-events": "4.0.0",
    "reciple-registry-cache": "4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.10.3",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}